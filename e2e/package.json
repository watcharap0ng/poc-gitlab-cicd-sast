{
  "name": "e2e-tests",
  "version": "1.0.0",
  "description": "End-to-end testing with Playwright",
  "scripts": {
    "test:e2e": "playwright test",
    "test:e2e:ci": "playwright test --reporter=junit,json --output-dir=test-results",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:codegen": "playwright codegen",
    "test:e2e:install": "playwright install",
    "test:e2e:show-report": "playwright show-report",
    "test:e2e:chrome": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:safari": "playwright test --project=webkit",
    "test:e2e:mobile": "playwright test --project=mobile"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.8.0",
    "typescript": "^5.2.2",
    "tsx": "^4.6.0"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "axios": "^1.6.0"
  }
}